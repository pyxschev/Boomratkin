<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <PawnKindDef Name="BRKBasePawnKind" Abstract="True">
        <combatPower>20</combatPower>
        <canBeSapper>true</canBeSapper>
        <race>Boomratkin</race>
        <maxGenerationAge>45</maxGenerationAge>
        <!-- <defaultFactionType>Rakinia</defaultFactionType> -->
        <invNutrition>2</invNutrition>
        <apparelIgnoreSeasons>true</apparelIgnoreSeasons>
        <backstoryCryptosleepCommonality>0</backstoryCryptosleepCommonality>
        <apparelColor>(255,255,255)</apparelColor>
        <initialResistanceRange>0~10</initialResistanceRange>
        <initialWillRange>5~10</initialWillRange>
    </PawnKindDef>	


    <PawnKindDef ParentName="BRKBasePawnKind">
		<defName>BoomratkinColonist</defName>
		<label>Boomratkin colonist</label>
		<defaultFactionType>RK_PlayerFaction</defaultFactionType>		
		<backstoryFiltersOverride>
			<li>
				<categories>
					<li>RatkinStory</li>
				</categories>
			</li>
		</backstoryFiltersOverride>
		<apparelRequired>
			<li>RK_ApronSkirt</li>
		</apparelRequired>
		<apparelMoney>
			<min>120</min>
			<max>120</max>
		</apparelMoney>
		<apparelTags>
			<li>RK_Worker</li>
		</apparelTags>
		<apparelAllowHeadgearChance>0.0</apparelAllowHeadgearChance>
		<apparelColor>(254,254,254)</apparelColor>
	</PawnKindDef>
</Defs>